@model ShopMate.Application.Products.Create.Model

@{
    ViewData["Title"] = "Create";
    SelectList UnitSizeSelectList = new SelectList(Model.UnitSizes, "Key", "Value", Model.DefaultUnitSizeId);
}


<h1>Create Product</h1>
<hr />

@if (Model.UnitSizes.Count == 0)
{
    <div class="row">
        <h4>There are no Unit Sizes defined yet. At least one Unit Size must be defined before you create a product.</h4>
        <a asp-controller="UnitSizes" asp-action="Create">Click here to create a new Unit Size.</a>
    </div>
}
else
{

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DefaultUnitSizeId" class="control-label"></label>
                    <select asp-for="DefaultUnitSizeId" class="form-control" asp-items="UnitSizeSelectList"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
